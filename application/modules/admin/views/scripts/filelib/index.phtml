<h1><?php echo $this->translate('File library'); ?></h1>

<div id="sidebar">

<h2><?php echo $this->translate('Folders'); ?></h2>


<ul>
<?php $depth = 0; $first = true; ?>

<?php foreach($this->iter as $folder): ?>

	<?php if($first): ?>
	<?php $first = false; ?>
	<?php else: ?>
	
	<?php if($this->iter->getDepth() > $depth) echo '<ul>'; ?>
	<?php if($this->iter->getDepth() < $depth) echo str_repeat('</li></ul>', $depth - $this->iter->getDepth()); ?>
	<?php if($this->iter->getDepth() == $depth) echo '</li>'; ?>
	
	<?php endif; ?>
		
	<li>						
	<?php if($this->folder && $this->folder->id == $folder->id): ?>
	<strong><?php echo $folder->name == 'root' ? '/' : $folder->name; ?></strong>
	
	<?php if($this->folder->parent_id != null): ?>
	[<a class="delete-folder" href="<?php echo $this->url(array('module' => 'admin', 'controller' => 'folder', 'action' => 'delete', 'id' => $folder->id), 'default', true); ?>"><?php echo $this->translate('Delete'); ?></a>]
	<?php endif; ?>
	
	[<a href="<?php echo $this->url(array('module' => 'admin', 'controller' => 'folder', 'action' => 'edit', 'id' => $folder->id), 'default', true); ?>"><?php echo $this->translate('Edit'); ?></a>]
	
	<?php else: ?>
	<a href="/admin/filelib/index/id/<?php echo $folder->id; ?>">
	<?php echo $folder->name == 'root' ? '/' : $folder->name; ?>
	</a>
	<?php endif; ?>
	
	<?php $depth = $this->iter->getDepth(); ?>
	
	<?php endforeach; ?>
	
	<?php if($depth) echo str_repeat('</li></ul>', $depth); ?>
	
</ul>

<?php if($this->folder): ?>

<h3><?php echo $this->translate('Create folder'); ?></h3>
<?php echo $this->folderForm; ?>
<?php endif; ?>

</div>

<div> 

