Versions:
<?php foreach($this->fl->getFileVersions($file) as $fv): ?>
<a href="<?php echo $this->url(array('module' => 'filelib', 'controller' => 'file', 'action' => 'render', 'id' => $file->id, 'version' => $fv), 'default', true); ?>"><?php echo $fv; ?></a> 
<?php endforeach; ?>

</li>
<?php endforeach; ?>
</ul>


<h3><?php echo $this->translate('Upload file'); ?></h3>

