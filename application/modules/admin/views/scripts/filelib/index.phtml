<?php if($this->files): ?>
<ul>
<?php foreach($this->files as $file): ?>
<li>
<a href="<?php echo $this->url(array('module' => 'filelib', 'controller' => 'file', 'action' => 'render', 'id' => $file->id), 'default', true); ?>"><?php echo $file->name; ?></a>
[<a class="delete-file" href="<?php echo $this->url(array('module' => 'admin', 'controller' => 'file', 'action' => 'delete', 'id' => $file->id), 'default', true); ?>"><?php echo $this->translate('Delete'); ?></a>]
